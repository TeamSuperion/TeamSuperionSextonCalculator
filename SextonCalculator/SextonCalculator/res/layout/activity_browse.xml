<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000" >

    <include
        android:id="@+id/activity_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_header" />

    <SlidingDrawer
        android:id="@+id/entree_drawer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_header"
        android:allowSingleTap="true"
        android:content="@+id/entree_content"
        android:handle="@+id/entree_button" >

        <Button
            android:id="@+id/entree_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="@string/entree_button"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/entree_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foodItem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="-" >
            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+" >
            </Button>
        </LinearLayout>
    </SlidingDrawer>

    <SlidingDrawer
        android:id="@+id/sides_drawer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entree_drawer"
        android:content="@+id/sides_content"
        android:handle="@+id/sides_button" >

        <Button
            android:id="@+id/sides_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sides_button"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/sides_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </LinearLayout>
    </SlidingDrawer>

    <SlidingDrawer
        android:id="@+id/drinks_drawer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sides_drawer"
        android:content="@+id/drinks_content"
        android:handle="@+id/drinks_button" >

        <Button
            android:id="@+id/drinks_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/drinks_button"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/drinks_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </LinearLayout>
    </SlidingDrawer>

    <TextView
        android:id="@+id/totalPrice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/totalPrice_textView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />
    
        <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/entree_drawer"
        android:layout_centerHorizontal="true" />

</RelativeLayout>