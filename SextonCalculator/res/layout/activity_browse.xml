<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000">

	<include     
    	android:id="@+id/header"
    	layout="@layout/header"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    />

	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
        android:layout_below="@+id/header" >
	    
    	<SlidingDrawer
    	    android:id="@+id/entree_drawer"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_alignTop="@+id/header"
    	    android:allowSingleTap="true"
    	    android:content="@+id/entree_content"
    	    android:handle="@+id/entree_button" >

	    <Button
	        android:id="@+id/entree_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:enabled="true"
	        android:text="@string/entree_button"
	        />

	        <LinearLayout
    	        android:id="@+id/entree_content"
        	    android:layout_width="match_parent"
            	android:layout_height="match_parent" >
	        
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/ic_launcher" >
	        	</ImageView>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="Food Item" />
	        	<TextView 
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:text="Price"/>
	        	<Button android:layout_width="50dp"
	        	    android:layout_height="50dp"
	        	    android:text="-" >
	        	</Button>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:textSize="30dp"
	        	    android:text="0" />
	        	<Button
	        	    android:layout_width="50dp"
	        	    android:layout_height="50dp"
	        	    android:text="+" >
	        	</Button>
	        	
        	</LinearLayout>
	        
		</SlidingDrawer>
          
    	<SlidingDrawer
        	android:id="@+id/sides_drawer"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_alignTop="@+id/entree_drawer"
        	android:content="@+id/sides_content"
        	android:handle="@+id/sides_button" >
	        
	    <Button
        	android:id="@+id/sides_button"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/sides_button" 
        />	 
        
	    <LinearLayout
    	    android:id="@+id/sides_content"
        	android:layout_width="match_parent"
            android:layout_height="match_parent" >
	        
	    </LinearLayout>
        
	    </SlidingDrawer>
	    
    	<SlidingDrawer
        	android:id="@+id/drinks_drawer"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:content="@+id/drinks_content"
        	android:layout_alignTop="@+id/sides_drawer"
        	android:handle="@+id/drinks_button" >
	        
	    <Button
        	android:id="@+id/drinks_button"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/drinks_button" 
        /> 
        
	    <LinearLayout
    	    android:id="@+id/drinks_content"
        	android:layout_width="match_parent"
            android:layout_height="match_parent" >
	        
	    </LinearLayout>
        
	    </SlidingDrawer>
        

	    
	</RelativeLayout>
	
    <TextView
        android:id="@+id/totalPrice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/totalPrice_textView"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
